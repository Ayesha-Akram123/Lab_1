<div class="d-flex justify-content-center align-items-center vh-100">
  <form class="p-4 shadow rounded bg-white" style="width: 100%; max-width: 600px;" action="/admin/products/create"
    method="POST" enctype="multipart/form-data">
    <h3 class="text-center mb-4">Create New Product</h3>

    <!-- Title -->
    <div class="form-group mb-3">
      <label for="inputTitle" class="form-label">Title</label>
      <input type="text" class="form-control" id="inputTitle" name="title" placeholder="Enter product title" required>
    </div>

    <!-- Description -->
    <div class="form-group mb-3">
      <label for="inputDescription" class="form-label">Description</label>
      <textarea class="form-control" id="inputDescription" name="description" placeholder="Enter product description"
        rows="3" required></textarea>
    </div>

    <!-- Price -->
    <div class="form-group mb-3">
      <label for="inputPrice" class="form-label">Price</label>
      <input type="number" class="form-control" id="inputPrice" name="price" placeholder="Enter price" min="0"
        step="0.01" required>
    </div>

    <!-- Is Featured -->
    <div class="form-group form-check mb-3">
      <input name="isFeatured" type="checkbox" class="form-check-input" id="isFeatured">
      <label class="form-check-label" for="isFeatured">Featured?</label>
    </div>

    <!-- Image Upload -->
    <div class="form-group mb-4">
      <label for="inputImage" class="form-label">Upload Image</label>
      <input type="file" class="form-control" id="inputImage" name="image" accept="image/*" required>
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <button type="submit" class="btn btn-primary">
        Create Product
      </button>
    </div>
  </form>
</div>